@model IEnumerable<ModelsApi.Models.DTOs.Login>


@{
    ViewData["Title"] = "LoginView";
}

<head>
    <script src="~/js/Login-vue.js"></script>
</head>

<h1>LoginView</h1>
<div id="loginVue">
    <div>
        <div>
            <form>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" v-model="email" placeholder="Please enter your email">*
                    @*<span class="text-danger">{nameValidationMsg}}</span>*@
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="text" v-model="password" placeholder="Please enter your password">*
                    @*<span class="text-danger">{emailValidationMsg}}</span>*@
                </div>
                <div class="form-group">
                    <button type="button" class="button"
                            style="margin-left: 110px;"
                            v-on:click="loginApplication"
                            @*:disabled="sendDisabled"*@>
                        Login In
                    </button> &nbsp;&nbsp;
                </div>
            </form>
            <span class="text-danger" style="margin-left: 110px;">{{message}}</span>
        </div>
    </div>
</div>

